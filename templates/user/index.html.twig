{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Utilisateurs</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary mb-3">Nouvel Utilisateur</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nomUser }}</td>
                    <td>{{ user.prenomUser }}</td>
                    <td>{{ user.mail }}</td>
                    <td>{{ user.tel }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun utilisateur</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}