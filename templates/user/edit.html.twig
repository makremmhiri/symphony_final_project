{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Modifier Utilisateur #{{ user.id }}</h1>
    
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('app_user') }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
    
    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" class="mt-3" onsubmit="return confirm('Supprimer?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>
</div>
{% endblock %}