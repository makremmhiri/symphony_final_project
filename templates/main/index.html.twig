{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <h1 class="display-4 fw-bold text-primary mb-3">Bienvenue sur Notre Plateforme</h1>
                    <p class="lead text-muted mb-5">Découvrez nos produits et magasins</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Version avec images de fond -->
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card text-white bg-dark">
                    <img src="https://via.placeholder.com/600x300/007bff/ffffff?text=PRODUITS" 
                         class="card-img" 
                         alt="Produits"
                         style="height: 300px; object-fit: cover;">
                    <div class="card-img-overlay d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <h2 class="card-title fw-bold">Produits</h2>
                            <p class="card-text">Découvrez notre catalogue</p>
                            <a href="{{ path('app_produit') }}" class="btn btn-light btn-lg mt-3">
                                Explorer
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card text-white bg-dark">
                    <img src="https://via.placeholder.com/600x300/28a745/ffffff?text=MAGASINS" 
                         class="card-img" 
                         alt="Magasins"
                         style="height: 300px; object-fit: cover;">
                    <div class="card-img-overlay d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <h2 class="card-title fw-bold">Magasins</h2>
                            <p class="card-text">Trouvez nos points de vente</p>
                            <a href="{{ path('app_magasin') }}" class="btn btn-light btn-lg mt-3">
                                Découvrir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="bg-light py-4">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <h3 class="text-primary fw-bold">+1000</h3>
                    <p class="text-muted">Produits disponibles</p>
                </div>
                <div class="col-md-4">
                    <h3 class="text-success fw-bold">+50</h3>
                    <p class="text-muted">Magasins partenaires</p>
                </div>
                <div class="col-md-4">
                    <h3 class="text-warning fw-bold">24/7</h3>
                    <p class="text-muted">Service client</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 15px;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.btn {
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}

.card-img-overlay {
    background: rgba(0, 0, 0, 0.5);
    border-radius: 15px;
}
</style>
{% endblock %}