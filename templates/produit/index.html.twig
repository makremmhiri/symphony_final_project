{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Liste des Produits</h1>

            <!-- Formulaire de filtres -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" action="{{ path('app_produit') }}">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <input type="text" 
                                       name="search" 
                                       class="form-control" 
                                       placeholder="Rechercher un produit..."
                                       value="{{ searchTerm }}">
                            </div>
                            <div class="col-md-3">
                                <select name="marque" class="form-select">
                                    <option value="">Toutes les marques</option>
                                    {% for marque in marques %}
                                        <option value="{{ marque }}" {{ selectedMarque == marque ? 'selected' : '' }}>
                                            {{ marque }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select name="stock" class="form-select">
                                    <option value="">Tous les stocks</option>
                                    <option value="inStock" {{ selectedStock == 'inStock' ? 'selected' : '' }}>En stock</option>
                                    <option value="lowStock" {{ selectedStock == 'lowStock' ? 'selected' : '' }}>Stock faible</option>
                                    <option value="outOfStock" {{ selectedStock == 'outOfStock' ? 'selected' : '' }}>Rupture</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter"></i> Filtrer
                                </button>
                            </div>
                        </div>
                    </form>
                    
                    <!-- Lien pour réinitialiser les filtres -->
                    {% if searchTerm or selectedMarque or selectedStock %}
                        <div class="mt-3">
                            <a href="{{ path('app_produit') }}" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times"></i> Réinitialiser les filtres
                            </a>
                            <small class="text-muted ms-2">
                                {{ produits|length }} produit(s) trouvé(s)
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Tableau des produits -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Produits</h5>
                    <span class="badge bg-primary">{{ produits|length }} produit(s)</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Nom</th>
                                    <th>Marque</th>
                                    <th>Prix</th>
                                    <th>Stock</th>
                                    <th>Description</th>
                                    <th>Magasin</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for produit in produits %}
                                    <tr>
                                        <td>{{ produit.id }}</td>
                                        <td>
                                            {% if produit.img %}
                                                <img src="{{ asset('uploads/products/' ~ produit.img) }}" 
                                                     alt="{{ produit.nomProd }}" 
                                                     class="img-thumbnail" 
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                            {% else %}
                                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <strong>{{ produit.nomProd }}</strong>
                                        </td>
                                        <td>
                                            {% if produit.marque %}
                                                <span class="badge bg-secondary">{{ produit.marque }}</span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="fw-bold text-primary">{{ produit.prix }} €</span>
                                        </td>
                                        <td>
                                            {% if produit.quatiteDisp > 10 %}
                                                <span class="badge bg-success">{{ produit.quatiteDisp }} unités</span>
                                            {% elseif produit.quatiteDisp > 0 %}
                                                <span class="badge bg-warning">{{ produit.quatiteDisp }} unités</span>
                                            {% else %}
                                                <span class="badge bg-danger">Rupture</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                {{ produit.description|length > 50 ? produit.description|slice(0, 50) ~ '...' : produit.description }}
                                            </small>
                                        </td>
                                        <td>
                                            {% if produit.idMag %}
                                                <span class="badge bg-info" title="{{ produit.idMag.adresse ?? '' }}">
                                                    {{ produit.idMag.nom ?? 'N/A' }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-box-open fa-3x mb-3"></i>
                                                <h4>
                                                    {% if searchTerm or selectedMarque or selectedStock %}
                                                        Aucun produit trouvé
                                                    {% else %}
                                                        Aucun produit dans la base de données
                                                    {% endif %}
                                                </h4>
                                                {% if searchTerm or selectedMarque or selectedStock %}
                                                    <p>Aucun produit ne correspond à vos critères de recherche.</p>
                                                    <a href="{{ path('app_produit') }}" class="btn btn-primary">
                                                        Voir tous les produits
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}