{% extends 'base.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <i class="bi bi-pencil me-2"></i>Modifier Produit
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom_prod, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom_prod, {'attr': {'class': 'form-control' ~ (form.nom_prod.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nom_prod) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.id_mag, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.id_mag, {'attr': {'class': 'form-select' ~ (form.id_mag.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.id_mag) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control' ~ (form.prix.vars.errors|length ? ' is-invalid' : '')}}) }}
                                <span class="input-group-text">€</span>
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.prix) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.quatite_disp, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.quatite_disp, {'attr': {'class': 'form-control' ~ (form.quatite_disp.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.quatite_disp) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.marque, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.marque, {'attr': {'class': 'form-control' ~ (form.marque.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.marque) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control' ~ (form.imageFile.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.imageFile) }}
                            </div>
                            {% if form.vars.data.img %}
                                <div class="mt-2">
                                    <small class="text-muted">Image actuelle:</small><br>
                                    {% set produit = form.vars.data %}
                                    <img src="{{ asset('images/products/' ~ produit.img) }}" 
                                         alt="{{ produit.nomProd }}" 
                                         class="img-thumbnail mt-1" 
                                         style="width: 100px; height: 100px; object-fit: cover;">
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : ''), 'rows': 4}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    
                    {# CSRF Token #}
                    {{ form_row(form._token) }}
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_produit') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
            
            <!-- Delete Form -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Zone de danger</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Cette action est irréversible. Toutes les données associées à ce produit seront supprimées.</p>
                    {{ include('produit/delete.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}