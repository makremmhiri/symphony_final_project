{% extends 'base.html.twig' %}

{% block title %}Authentification - ShopPlus{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-shield-check display-1 text-primary mb-4"></i>
                    <h1 class="h2 mb-3">Bienvenue sur ShopPlus</h1>
                    <p class="lead text-muted mb-4">
                        Connectez-vous pour accéder à votre tableau de bord
                    </p>
                    
                    <div class="d-grid gap-3">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                        </a>
                        <a href="{{ path('app_user_new') }}" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Créer un compte
                        </a>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row text-center">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <i class="bi bi-shop display-6 text-primary mb-3"></i>
                                    <h5>Gestion des Magasins</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <i class="bi bi-box display-6 text-primary mb-3"></i>
                                    <h5>Gestion des Produits</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}