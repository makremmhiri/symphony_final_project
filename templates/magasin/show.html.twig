{% extends 'base.html.twig' %}

{% block title %}Détails du Magasin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Détails du Magasin</h2>
                    <span class="badge bg-primary">ID: {{ magasin.id }}</span>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nom:</dt>
                        <dd class="col-sm-9">{{ magasin.nom }}</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">{{ magasin.mail }}</dd>
                        
                        <dt class="col-sm-3">Adresse:</dt>
                        <dd class="col-sm-9">{{ magasin.place }}</dd>
                        
                        <dt class="col-sm-3">Téléphone:</dt>
                        <dd class="col-sm-9">{{ magasin.tel ? magasin.tel : '-' }}</dd>
                        
                        <dt class="col-sm-3">Propriétaire:</dt>
                        <dd class="col-sm-9">{{ magasin.owner ? magasin.owner : '-' }}</dd>
                        
                        <dt class="col-sm-3">Produits:</dt>
                        <dd class="col-sm-9">
                            {% if magasin.produits|length > 0 %}
                                <span class="badge bg-info">{{ magasin.produits|length }} produit(s)</span>
                                <ul class="mt-2 mb-0">
                                    {% for produit in magasin.produits %}
                                        <li>{{ produit.nomProd }} ({{ produit.prix }}€)</li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <span class="text-muted">Aucun produit</span>
                            {% endif %}
                        </dd>
                    </dl>
                    
                    <div class="d-flex gap-2 mt-4">
                        <a href="{{ path('app_magasin') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <a href="{{ path('app_magasin_edit', {'id': magasin.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}