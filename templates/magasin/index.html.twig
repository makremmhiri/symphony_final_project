{% extends 'base.html.twig' %}

{% block title %}Liste des Magasins{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Liste des Magasins</h1>

    {% if magasins is not empty %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Lieu</th>
                        <th>Téléphone</th>
                        <th>Propriétaire</th>
                        <th>Nombre de Produits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for magasin in magasins %}
                        <tr>
                            <td>{{ magasin.id }}</td>
                            <td>
                                <strong>{{ magasin.nom }}</strong>
                            </td>
                            <td>{{ magasin.mail }}</td>
                            <td>{{ magasin.place }}</td>
                            <td>{{ magasin.tel ?? 'Non renseigné' }}</td>
                            <td>{{ magasin.owner ?? 'Non renseigné' }}</td>
                            <td>
                                <span class="badge bg-primary">{{ magasin.produits|length }} produits</span>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">Voir</a>
                                <a href="#" class="btn btn-sm btn-outline-secondary">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucun magasin trouvé dans la base de données.
        </div>
    {% endif %}
</div>
{% endblock %}