{% extends 'base.html.twig' %}

{% block title %}Nouveau Magasin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-store me-2"></i>Nouveau Magasin
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Ex: Galeries Lafayette'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.mail, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control' ~ (form.mail.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'contact@magasin.com'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.mail) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.tel, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tel, {'attr': {'class': 'form-control' ~ (form.tel.vars.errors|length ? ' is-invalid' : ''), 'placeholder': '12345678'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.tel) }}
                            </div>
                            <small class="text-muted">8 chiffres maximum (optionnel)</small>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.place, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.place, {'attr': {'class': 'form-control' ~ (form.place.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Ex: Avenue Habib Bourguiba, Tunis'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.place) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.owner, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.owner, {'attr': {'class': 'form-control' ~ (form.owner.vars.errors|length ? ' is-invalid' : ''), 'placeholder': 'Ex: Société Tunisienne des Magasins'}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.owner) }}
                        </div>
                        <small class="text-muted">Nom du propriétaire (optionnel)</small>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_magasin') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Créer le magasin
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}