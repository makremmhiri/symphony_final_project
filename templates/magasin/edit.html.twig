{% extends 'base.html.twig' %}

{% block title %}Modifier le Magasin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier le Magasin
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.mail, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control' ~ (form.mail.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.mail) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.tel, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tel, {'attr': {'class': 'form-control' ~ (form.tel.vars.errors|length ? ' is-invalid' : '')}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.tel) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.place, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.place, {'attr': {'class': 'form-control' ~ (form.place.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.place) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.owner, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.owner, {'attr': {'class': 'form-control' ~ (form.owner.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.owner) }}
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_magasin') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            <!-- Delete Form -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Zone de danger</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Cette action est irréversible. Toutes les données associées à ce magasin seront supprimées.</p>
                    <form method="post" action="{{ path('app_magasin_delete', {'id': magasin.id}) }}" 
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce magasin?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ magasin.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Supprimer le magasin
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}